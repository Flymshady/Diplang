<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.uhk.fim.cellar.diplang">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pixel_diplang"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pixel_diplang"
        android:supportsRtl="true"
        android:theme="@style/Theme.Diplang">
        <activity android:name=".LessonActivity"></activity>
        <activity android:name=".TranslatorActivity" />
        <activity android:name=".SpeechActivity" />
        <activity android:name=".NotificationSettingsActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".NavigationActivity" />
        <activity android:name=".ForgottenPassword" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".ReminderBroadcast" />
    </application>

</manifest>